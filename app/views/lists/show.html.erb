<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.picture_url %>)">

  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<%= link_to "Create Bookmark", new_list_bookmark_path(@list) %>

<div class="container">

  <% @list.movies.each do |movie| %>
  <div class="cards my-5">
    <%= render 'movie', movie: movie %>
  </div>
  <% end %>

  <%= link_to "HOME", lists_path %></div>

</div>
