

<div class="card-product">
<img src= <%= movie.poster_url %> >
  <div class="card-product-infos">
    <h3><strong><%= movie.title %> </strong> rating: <strong><%= movie.rating %></strong></h3>
    <p class="movie-overview"><%= movie.overview %><br></p>
    <p class="bookmark-comment"><strong>Bookmark: </strong><%= movie.bookmarks.last.comment %><br></p>

    <%= link_to "Delete",
        bookmark_path(movie.bookmarks.find_by(list: list)),
        method: :delete,
        data: { confirm: "Sure about it?" } %>
  </div>
</div>
