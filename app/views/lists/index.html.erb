<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "JULI's project", lists_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

        <li class="nav-item active">
          <%= link_to "New List",  new_list_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Movies", movies_path, class: "nav-link"  %>
        </li>

      </ul>
    </div>
  </div>
</div>

<div class="home-banner">
  <h1>Save any kind of movies</h1>
  <h3>Create a new list</h3>
</div>

<div class="container text-center ">
  <div class="row justify-content-center">
    <div class="col-6">

      <h1 style="padding: 30px">Lists</h1>

      <div class="container">
        <div class="row">

          <% @lists.each do |list| %>
          <div class="card-list col"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.picture_url %>)">
            <%= link_to list.name, list_path(list) %>
          </div>
          <% end %>
          <div class="btn-index-fix-margin">
            <%= link_to 'New List', new_list_path, class: 'btn btn-outline-dark' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



